extend ../base.pug

block content 
    form.edit-profile__form(method="POST") 
        label(for="") Title 
        input(name="title" type="text" value=video.title required)
        label(for="") Description
        input(name="description" type="text" value=video.description required minlength=20) 
        label(for="") Hashtags
        input(name="hashtags" type="text" value=video.hashtags.join() required) 
        input(type="submit" value="save")
