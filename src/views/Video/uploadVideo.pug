extend ../base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(action="", method="post" enctype="multipart/form-data")
        input(name="video" type="file" id="video" placeholder="Upload Videos" accept="video/*" required) 
        input(name="title" type="text" placeholder="Title" required maxlength=30) 
        input(name="description" type="text" placeholder="Description" required minlength=5) 
        input(name="hashtags" type="text" placeholder="Hashtags, divied by comma" required) 
        input(type="submit" value="Upload") 
