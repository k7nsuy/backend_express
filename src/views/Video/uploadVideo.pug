extend ../base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(action="", method="post" enctype="multipart/form-data")
        label(for="video") Upload Videos
        input(name="video" type="file" id="video" placeholder="Upload Videos" accept="video/*" required) 
        label(for="") Title 
        input(name="title" type="text" placeholder="Title" required maxlength=80) 
        label(for="") Description
        input(name="description" type="text" placeholder="Description" required minlength=20) 
        label(for="") Hashtags
        input(name="hashtags" type="text" placeholder="Hashtags, divied by comma" required) 
        input(type="submit" value="Upload") 
