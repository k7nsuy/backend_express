extend ../base.pug

block content 
    div.upload__container
        div.title Upload Video
        if errorMessage 
            h1=errorMessage
        form.edit-profile__form(action="", method="post" enctype="multipart/form-data")
            lable(for='video') Video File
            input(name="video" type="file" id="video" placeholder="Upload Videos" accept="video/*" required) 
            br
            br
            lable(for='thumb') Thumbnail File
            input(name="thumb" type="file" id="thumb" placeholder="Upload Thumbnail" accept="image/*" required) 
            input(name="title" type="text" placeholder="Title" required) 
            input(name="description" type="text" placeholder="Description" required) 
            input(name="hashtags" type="text" placeholder="Hashtags, divied by comma" required) 
            input(type="submit" value="Upload") 
            br
