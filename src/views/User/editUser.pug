extends ../base.pug

block content
    if errorMessage
        h2=errorMessage
    if updateMessage 
        h2=updateMessage
    div.title Edit Profile
    form(action="", method="post" enctype="multipart/form-data").edit-profile__form
        label(for="avatar" id="avatar") Avatar 
        input(type="file" id="avatar" name="avatar" accept="image/*")
        label(for="") Name 
        input(placeholder="Name" name="name", type="text", required value=profile.name)
        label(for="") Email
        input(placeholder="Email" name="email", type="email", required value=profile.email)
        label(for="") Username
        input(placeholder="Username" name="username", type="text", required value=profile.username)
        label(for="") Location
        input(placeholder="Location" name="location", type="text", required value=profile.location)
        input(type="submit", value="Update Profile")
        if !profile.socialOnly 
            div.edit-profile__password
                p
                    a.strong(href="edit-password") Edit Password
                br
                p
                    a.strong(href="delete") Delete Account 
