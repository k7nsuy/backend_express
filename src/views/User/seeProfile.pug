extends ../base
include ../mixins/video

block content
    div.profile__data 
        if profile.avatarUrl
            img(src="/" + profile.avatarUrl, alt="").avatar
        else 
            img.avatar(src='/uploads/user.png')
        h3=user.name
    div.video-grid
        each info in user.videos 
            +video(info)
        else 
            span.empty__message No videos found
